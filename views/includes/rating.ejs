<% for (let i = 1; i <= 5; i++) { %>
  <% if (product.rating >= i) { %>
    <li class="product__card__rating--item">
      <i class="fas fa-star star--filled"></i>
    </li>
  <% } else { %>
    <li class="product__card__rating--item">
      <i class="far fa-star star--reg"></i>
    </li>
  <% } %>
<% } %>